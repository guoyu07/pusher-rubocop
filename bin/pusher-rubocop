#!/usr/bin/env ruby
# encoding: utf-8

$LOAD_PATH.unshift(File.dirname(File.realpath(__FILE__)) + "/../lib")

require "pusher_rubocop"
require "benchmark"

cli = PusherRubocop::CLI.new
result = 0

time = Benchmark.realtime do
  result = cli.run
end

puts "Finished in #{time} seconds" if cli.options[:debug]
exit result
